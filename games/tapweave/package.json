{
  "name": "tapweave",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "TapWeave word insertion chain-builder for the Narduk Games monorepo.",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "deploy:worker": "wrangler deploy",
    "db:migrate": "wrangler d1 migrations apply tapweave-db --remote",
    "db:migrate:local": "wrangler d1 migrations apply tapweave-db --local"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@vitest/ui": "^4.0.15",
    "@vueuse/core": "^14.1.0",
    "autoprefixer": "^10.4.22",
    "pinia": "^3.0.4",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "vitest": "^4.0.15",
    "vue": "^3.5.24",
    "wrangler": "^4.53.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vue-tsc": "^3.1.4"
  }
}
